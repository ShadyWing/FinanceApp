<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="36dp">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="100dp"
        android:paddingBottom="20dp"
        android:text="理财APP"
        android:textColor="#3F3F3F"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/login_et_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginVertical="10dp"
        android:background="@drawable/shape_gray_edit"
        android:hint="账号"
        android:inputType="textLongMessage"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/login_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_et_account"
        android:layout_marginVertical="10dp"
        android:background="@drawable/shape_gray_edit"
        android:hint="密码"
        android:inputType="numberPassword"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_et_pwd"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="10dp"
            android:background="@drawable/shape_active_btn"
            android:text="登录"
            android:textSize="16sp" />

        <Button
            android:id="@+id/login_btn_changepwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_btn_login"
            android:layout_marginVertical="10dp"
            android:background="@drawable/shape_gray_edit"
            android:text="修改密码"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>